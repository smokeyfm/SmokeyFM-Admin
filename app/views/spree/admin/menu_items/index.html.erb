<%#= render partial: 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= Spree.t('navigator.admin.title.index') %>
<% end %>

<% content_for :page_actions do %>

    <%= button_link_to Spree.t('navigator.admin.button.new'), new_admin_menu_item_path, class: "btn-success", icon: 'add.svg' %>

<% end %>
<% if @menu_items.any? %>
<%#= render '/spree/admin/menu_items/children_menu' %>
  <%= render partial: 'spree/admin/menu_items/tree' %>
<% else %>
  <div class="alpha twelve columns no-objects-found">
    <%= Spree.t('navigator.admin.no_resource_found') %>,
    <%= link_to Spree.t(:add_one), spree.new_admin_menu_item_path %>!
  </div>
<% end %>
