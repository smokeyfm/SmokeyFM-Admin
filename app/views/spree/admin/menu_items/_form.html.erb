<fieldset data-hook="admin_menu_items_form_fields" class="no-border-top">
  <% if f.object.id.nil? %>
    <legend align="center"><%= Spree.t('menu_navigator.admin.fieldset.legend.new') %></legend>
  <% else %>
    <legend align="center"><%= Spree.t('menu_navigator.admin.fieldset.legend.edit') %></legend>
  <% end %>


  <div class="row" style="flex-wrap: unset;">
    <div class="field" style="margin: 10px;">
      <%= f.label :name, Spree.t('menu_navigator.admin.label.name') %>
      <%= f.text_field :name, class: 'fullwidth' %>
    </div>

    <div class="field" style="margin: 10px;">
      <%= f.label :url, Spree.t('menu_navigator.admin.label.url') %>
      <%= f.text_field :url, class: 'fullwidth' %>
    </div>


    <div class="field" style="margin: 10px;">
      <%= f.label :menu_location_id %>
      <%= f.select(:menu_location_id, @menu_location.map{|r| [r.title, r.id]},{:include_blank=> "Select"}, {:style=> "height: 29px; width: 210px;"}) %>
    </div>
  </div>

  <div class="form-buttons filter-actions actions" data-hook="buttons">
    <% if f.object.id.nil? %>
      <%= button Spree.t('actions.create'), 'refresh' %>
    <% else %>
      <%= button Spree.t('actions.update'), 'refresh' %>
    <% end %>
    <span class="or"><%= Spree.t(:or) %></span>
    <%= link_to_with_icon 'remove', Spree.t('actions.cancel'), admin_menu_items_path, class: 'button' %>
  </div>
</fieldset>



<script>

  window.onload = function() {
      var selItem = sessionStorage.getItem("MenuItem");
      $('#menu_item_menu_location_id').val(selItem);
      }
      $('#menu_item_menu_location_id').change(function() {
          var selVal = $(this).val();
          sessionStorage.setItem("MenuItem", selVal);
      });
</script>
