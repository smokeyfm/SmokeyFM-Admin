<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @thread } %>

<% content_for :page_title do %>
  <%= link_to Spree.t(:threads), spree.admin_threads_path %> /
  <%= Spree.t(:edit_threads) %>
<% end %>

<%= form_for [:admin, @thread], url: admin_thread_path(id: @thread.id), html: { multipart: true }, method: :patch do |f| %>
  <fieldset data-hook="new_thread">
    <%= f.field_container :archived, class: ['form-group'] do %>
      <%= f.check_box :archived %>
      <%= Spree.t(:archived) %>
    <% end %>

    <%= f.field_container :stale, class: ['form-group'] do %>
      <%= f.check_box :stale %>
      <%= Spree.t(:stale) %>
    <% end %>

    <%= render partial: 'spree/admin/threads/edit_resource_links' %>
  </fieldset>
<% end %>
