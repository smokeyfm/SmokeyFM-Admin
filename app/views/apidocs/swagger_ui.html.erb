<!-- HTML for static distribution bundle build -->
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Swagger UI</title>
        <% if Rails.env == 'development' %>
            <link rel="stylesheet" type="text/css" href="/swagger-ui/dist/swagger-ui.css" >
        <% elsif Rails.env == 'staging' %>
            <link rel="stylesheet" type="text/css" href="/swagger-ui/dist/swagger-ui.css" >
        <% else %>
            <link rel="stylesheet" type="text/css" href="/swagger-ui/dist/swagger-ui.css" >
        <% end %>
        <link rel="icon" type="image/png" href="./favicon-32x32.png" sizes="32x32" />
        <link rel="icon" type="image/png" href="./favicon-16x16.png" sizes="16x16" />
        <style>
            html
            {
                box-sizing: border-box;
                overflow: -moz-scrollbars-vertical;
                overflow-y: scroll;
            }

            *,
            *:before,
            *:after
            {
                box-sizing: inherit;
            }

            body
            {
                margin:0;
                background: #fafafa;
            }
        </style>
    </head>

    <body>
        <div id="swagger-ui"></div>
        <% if Rails.env == 'development' %>
            <script src="/swagger-ui/dist/swagger-ui-bundle.js"> </script>
            <script src="/swagger-ui/dist/swagger-ui-standalone-preset.js"> </script>
        <% elsif Rails.env == 'staging' %>
            <script src="/swagger-ui/dist/swagger-ui-bundle.js"> </script>
            <script src="/swagger-ui/dist/swagger-ui-standalone-preset.js"> </script>
        <% else %>
            <script src="/swagger-ui/dist/swagger-ui-bundle.js"> </script>
            <script src="/swagger-ui/dist/swagger-ui-standalone-preset.js"> </script>
        <% end %>

        <script>
        window.onload = function() {
            // Begin Swagger UI call region

            const ui = SwaggerUIBundle({
                url: "<%= Rails.env == 'staging' ? 'http://localhost:3000/apidocs.json' : Rails.env == 'production' ? 'http://localhost:3000/apidocs.json' : 'http://localhost:3000/apidocs.json' %>",
                dom_id: '#swagger-ui',
                deepLinking: true,
                presets: [
                    SwaggerUIBundle.presets.apis,
                    SwaggerUIStandalonePreset
                ],
                plugins: [
                    SwaggerUIBundle.plugins.DownloadUrl
                ],
                layout: "StandaloneLayout"
            })
            // End Swagger UI call region

            window.ui = ui
        }
        </script>
    </body>
</html>
